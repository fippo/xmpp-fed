oid_section = new_oids

[new_oids]
xmppAddr = 1.3.6.1.5.5.7.8.5

[ req ]
default_bits       = 1024
default_keyfile    = private.key
distinguished_name = im_example_com_dn
req_extensions     = im_example_com_exts

[ im_example_com_dn ]
countryName                 = Country Name (2 letter code)
countryName_default         = US
stateOrProvinceName         = State or Province Name (full name)
stateOrProvinceName_default = Colorado
localityName                = Locality Name (eg, city)
localityName_default        = Denver
organizationName            = Organization Name (eg, company)
commonName                  = Common Name (eg, YOUR name)
commonName_default          = im.example.com
commonName_max              = 64

[ im_example_com_exts ]
subjectAltName              = otherName:xmppAddr;UTF8:im.example.com,DNS:im.example.com
